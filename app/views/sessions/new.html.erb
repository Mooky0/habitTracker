<div class="card shadow p-4" style="width: 350px; background-color: #fdf8f1; border-radius: 10px;">
  <h2 class="text-center mb-4" style="font-family: 'Georgia', serif;">Habit Tracker Login</h2>

  <%= form_with url: login_path, method: :post, class: "w-100" do %>
    <div class="mb-3">
      <%= label_tag :username, "Username", class: "form-label" %>
      <%= text_field_tag :username, nil, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= label_tag :password, "Password", class: "form-label" %>
      <%= password_field_tag :password, nil, class: "form-control" %>
    </div>

    <div class="d-grid gap-2">
      <%= submit_tag "Log in", class: "btn btn-secondary" %>
      <%= link_to "Register", register_path, class: "btn btn-outline-secondary" %>
    </div>
  <% end %>
</div>
